<h2>全ての日報一覧</h2>


<div class="date_field">
<%= form_tag admin_reports_list_path, :mithod => 'get' do %>

  フィルター<br>
  <%= text_field_tag :user, params[:user], :placeholder => "1..."%>ユーザーID
  <br>
  <%= text_field_tag :year, params[:year], :placeholder => "2014..."%>年
  <%= text_field_tag :month, params[:month], :placeholder => "12..."%>月
