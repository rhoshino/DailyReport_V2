#coding:utf-8


<% display_time = calc_month_work_time(@reports) %>

<h2>月報 (<%= "#{params[:year]}" %>年<%= "#{params[:month]}"%>月)</h2>
<div class="month_repory_data">

  今月の労働時間(<%=@worktime[:hour]%>時間<%=@worktime[:minute]%>分)<br>
  表示月の労働時間(<%=display_time[:hour]%>時間<%=display_time[:minute]%>分)
</div>

<div class="date_field">
<%= form_tag month_report_path, :mithod => 'get' do %>

  <%= text_field_tag :year, params[:year]%>年
  <%= text_field_tag :month, params[:month]%>月
  <%= submit_tag "更新" %>
<% end %>
</div>

<%= render 'shared/report_list' %>